<div id="category">

<%= form_for (category) do |f| %>
    <%=  f.label :name %>
    <%=  f.text_field :name %>
    <%=  f.hidden_field :quote_id, :value => quote.id %>
    <%=  f.submit %>
<% end %>
<div>

<script type="text/javascript" charset="utf-8">
  $(function () {
    $('form').submit(function(event) {
      event.preventDefault();
       var values = $(this).serialize();
 
       var category = $.post('/categories', values);
 
       category.done(function(data) {
        var quote=""
        quote+=data["data"]["attributes"]["name"]
        for(var i=0;i<data["data"]["relationships"]["quotes"]["data"]["length"];i++){
          quote+= "<p>"+data["data"]["relationships"]["quotes"]["data"][i]["text"]
          quote+= "<p>by "+data["data"]["relationships"]["quotes"]["data"][i]["author"]+"</p>"
        }
        $("div#category").html(quote)  
      });
    });
  });
</script>